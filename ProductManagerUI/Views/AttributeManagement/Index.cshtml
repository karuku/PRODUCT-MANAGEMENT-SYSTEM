
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Variants</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Home/">Home</a></li>
            <li><i class="fa fa-th-list"></i>Variants</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                Edit Variant
            </header>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Description</label>
                        <textarea class="form-control" id="variantDesc" placeholder="Enter Description"></textarea>
                    </div>


                    <div id="DivAttributeValue" class="form-group">
                        <label class="control-label col-lg-10" for="inputSuccess">Attribute Value</label>
                        <div class="col-lg-10" id="DivAttributeValueList">
                            <div class="row subAttributeData">
                                <div class="col-lg-8">
                                    <input type="text" class="form-control" name="subName" placeholder="Enter Value Name">
                                </div>

                                <div class="col-lg-2">
                                    <button type="button" id="btnAddValue" class="btn btn-primary">Add</button>
                                </div>
                            </div>  
                          
                        </div>

                    </div>
                     
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </section>
    </div>

    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                My Variants
                <a class="btn btn-primary pull-right" href="/AttributeManagement/SubVariants"><i class="icon_plus_alt2"></i>Sub Attributes</a>

            </header>

            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon_profile"></i> Name</th>
                        <th><i class="icon_mail_alt"></i> Desc</th> 
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                </thead>
                <tbody id="tData">
                     
                </tbody>
            </table>
        </section>
    </div>
</div>
@section Styles{
   
<style>
    .subAttribute {
        margin-top:2%;
    }
</style>

   }

@section Scripts{
    <script src="~/Content/PageJS/PageJS.js"></script>
    <script type="text/javascript">

        function AddAttributeValue() {
            var content = '<div class="row subAttribute">' +
                                '<div class="col-lg-8">'+ 
                                    '<input type="text" class="form-control" name="subName" placeholder="Enter Value Name">'+
                                '</div>'+
                                '<div class="col-lg-2">'+
                                    '<button type="button" onclick="RemoveAttributeValue(this)" class="btn btn-danger">Remove</button>' +
                                '</div>'+
                            '</div>';
            
            $('#DivAttributeValueList').append(content);
        }

        function RemoveAttributeValue(btn) {
            var e = $(btn);

            e.parent('div').parent('div').remove(); 
        }

        function GetTableData(url) {

            $.get(url, null, function (data) {

                var responseObj = data;
                var tData = $('#tData');
                tData.empty();
                ValidateTableData(tData, responseObj);

            }, "json").always(function () {

            }).fail(function () {
                toastr.error("Error Getting Table Data", 'Error!');
            }, "json");
        }

        function ValidateTableData(tData, dataObj) {

            var content = '';
            var rCode = dataObj.rCode;

            if (rCode == 0) {

                var datas = dataObj.rObj.typeList;
                if (datas != null && datas.length>0) {

                    FillTableData(tData, datas);
                }
                else {
                    FillEmptyTableData(tData);
                }
            } else {
                FillEmptyTableData(tData);
            }
        }

        function FillTableData(tData, dataObj) {

            var content = '';

            var datas = dataObj;

            for (var i = 0; i < datas.length; i++) {
                var data = datas[i];
                content = content + '<tr class="data" id="data' + i + '">';

                content = content + '<td>' + data.name + '</td>';
                content = content + '<td>' + data.variantDesc + '</td>';
                content = content + '<td>' +
                    ' <div class="btn-group">' +
                                '<a class="btn btn-success" href="#"><i class="icon_pencil-edit_alt"></i></a>' +
                                '<a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>' +
                            '</div>' +
                    '</td>';

                content = content + '</tr>';
            }

            tData.append(content);
        }

        function FillEmptyTableData(tData) {

            var content = '';
            content = content + '<tr>';

            content = content + ' <td colspan="3">No Data</td> ';

            content = content + '</tr>';

            tData.append(content);
        }

        $(document).ready(function () {

            var countAttr = 0;
            var url = 'http://localhost:1002/productAttributes';
            GetTableData(url);

            $('#btnAddValue').on('click', function () {
                var e = $(this);
                
                AddAttributeValue();
            });

            $('#btnSubmit').on('click', function (event) {
                event.preventDefault();
                var e = $(this);
                
                //var urlPost = 'http://localhost:1002/productAttributes';
                var urlPost = '/Main/PostToAPI';
         
                var name = $('#name').val();
                var variantDesc = $('#variantDesc').val();
                var model = new Object();
                model.id = 0;
                model.ProductVariantAttribute = new Object();
                model.ProductVariantAttribute = { name, variantDesc };
                model.ProductVariantSubAttributes = new Object();
                var subModel = new Object();

                var subList = [];
                var i = 0;
                $('#DivAttributeValueList > div.subAttributeData').each(function () {

                    var name = $(this).find('input[name=subName]').val();
                    var subVariantDesc = null;
                 
                    var subObj = {
                        name, subVariantDesc
                    };

                    subList.push(subObj);
                    i++;
                });

                model.ProductVariantSubAttributes = subList;

                console.log(model);

                //var entity = "productAttributes";
