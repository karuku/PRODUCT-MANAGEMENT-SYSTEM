
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Edit Product</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-backward"></i><a href="/ProductManagement/">Products</a></li>
            <li><i class="fa fa-th-list"></i>Edit Product</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                Edit Product
            </header>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Category</label>
                        <select class="form-control" id="catId" name="catId"></select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Type</label>
                        <select class="form-control" id="typeId" name="typeId"></select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">SKU</label>
                        <input type="text" class="form-control" id="skuCode" name="skuCode" placeholder="Enter SKU">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Quantity</label>
                        <input type="number" class="form-control" id="stockQtty" name="stockQtty" placeholder="Enter Quantity">
                    </div>
                    
                    @*<button type="submit" class="btn btn-primary">Submit</button>*@
                </form>

            </div>
        </section>
    </div>

    <div id="DivOtherProductDetails" class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                Other Details
            </header>
            <div class="panel-body">
                <form role="form">

                    <div id="DivStandardProduct" class="form-group" hidden>
                        <label class="control-label col-lg-2" for="inputSuccess">Price</label>
                        <div class="col-lg-10">
                            <div class="row">
                                
                                <div class="col-lg-8">
                                    <input type="number" class="form-control" id="price" name="price" placeholder="Enter Price">
                                </div> 
                            </div>

                        </div>
                    </div>

                    <div id="DivCompositeProduct" class="form-group" hidden>
                        <label class="control-label col-lg-2" for="inputSuccess">Standard Product</label>
                        <div class="col-lg-10">
                            <div class="row">
                                <div class="col-lg-4">
                                    <select class="form-control" id="standardProductId" name="standardProductId"></select>
                                </div>
                                <div class="col-lg-4">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="inlineCheckbox1" value="option1"> Mandatory
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="inlineCheckbox2" value="option2"> PriceInclusive
                                    </label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="inlineCheckbox3" value="option3"> Parent
                                    </label>

                                </div>
                                <div class="col-lg-3">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div id="DivVariantProduct" class="form-group" hidden>
                        <label class="control-label col-lg-2" for="inputSuccess">Sub Attribute</label>
                        <div class="col-lg-10">
                            <div class="row">
                                <div class="col-lg-4">
                                    <select class="form-control" id="subAttrId" name="subAttrId"></select>
                                </div>
                                <div class="col-lg-4">
                                    <input type="number" class="form-control" id="price" name="price" placeholder="Enter Price">
                                </div>
                                <div class="col-lg-3">
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>

                        </div>
                    </div>
                     
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </section>
    </div>

</div>