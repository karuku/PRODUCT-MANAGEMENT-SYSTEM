
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    var types = ViewBag.SystemTypes as List<System.Collections.Generic.KeyValuePair<ProductManagerUI.Models.SystemProductTypes, byte>>;
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Product Types</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Home/">Home</a></li>
            <li><i class="fa fa-th-list"></i>All Product Types</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                Type
            </header>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputEmail1">System Type</label>
                        <select class="form-control" id="systemTypeId" name="systemTypeId">
                            @if(types!=null && types.Count > 0)
                            {
                                foreach(var type in types)
                                {
                                    <option value="@type.Value">@type.Key</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Description</label>
                        <textarea class="form-control" id="typeDesc" placeholder="Enter Description"></textarea>
                    </div>

                    <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </section>
    </div>
    <div class="col-lg-6">
        <section class="panel">
            <header class="panel-heading">
                My Types
            
            </header>

            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th><i class="icon_profile"></i> Name</th>
                        <th><i class="icon_mail_alt"></i> Desc</th> 
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                </thead>
                <tbody id="tData">

                </tbody>
            </table>
        </section>
    </div>
</div>


